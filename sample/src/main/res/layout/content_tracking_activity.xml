<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/track_sources"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/track_sources_progressive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/track_progressive_format"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/track_sources_hls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/track_hls_format"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/track_contentbegin"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/track_contentbegin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/track_contentbegin_submit" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/track_adbegin"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/track_adbegin_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/track_adbegin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/track_adbegin_submit" />

</LinearLayout>